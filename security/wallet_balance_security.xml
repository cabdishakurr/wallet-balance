<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_wallet_balance_category" model="ir.module.category">
        <field name="name">Wallet Balance</field>
        <field name="description">Wallet Balance Access Rights</field>
        <field name="sequence">20</field>
    </record>

    <record id="group_wallet_balance_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_wallet_balance_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_wallet_balance_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_wallet_balance_category"/>
        <field name="implied_ids" eval="[(4, ref('group_wallet_balance_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>

    <record id="wallet_balance_user_rule" model="ir.rule">
        <field name="name">Users see only their wallet</field>
        <field name="model_id" ref="model_wallet_balance"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_wallet_balance_user'))]"/>
    </record>
</odoo> 