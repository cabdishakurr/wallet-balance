<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_user_wallet_category" model="ir.module.category">
        <field name="name">User Wallet</field>
        <field name="description">User Wallet Access Rights</field>
        <field name="sequence">20</field>
    </record>

    <record id="group_wallet_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_user_wallet_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_wallet_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_user_wallet_category"/>
        <field name="implied_ids" eval="[(4, ref('group_wallet_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>

    <record id="wallet_user_rule" model="ir.rule">
        <field name="name">Users can only see their own wallet</field>
        <field name="model_id" ref="model_user_wallet"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_wallet_user'))]"/>
    </record>

    <record id="wallet_manager_rule" model="ir.rule">
        <field name="name">Managers can see all wallets</field>
        <field name="model_id" ref="model_user_wallet"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_wallet_manager'))]"/>
    </record>
</odoo> 